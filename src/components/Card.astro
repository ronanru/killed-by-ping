---
type Props = {
  years: string;
  description: string;
  link: string;
};
---

<a
  target="_blank"
  href={Astro.props.link}
  class="grid h-full grid-cols-[5rem,1fr] gap-4 rounded-lg bg-[#272727] p-4"
>
  <div class="flex flex-col items-center justify-center gap-2">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      aria-label="gravestone icon"
      class="fill-gray-100"
      ><path
        d="M10,2H14C17.31,2 19,4.69 19,8V18.66C16.88,17.63 15.07,17 12,17C8.93,17 7.12,17.63 5,18.66V8C5,4.69 6.69,2 10,2M8,8V9.5H16V8H8M9,12V13.5H15V12H9M3,22V21.31C5.66,19.62 13.23,15.84 21,21.25V22H3Z"
      ></path></svg
    >
  </div>
  <div class="flex flex-col gap-2">
    <slot />
    <p class="text-sm text-gray-300">
      {Astro.props.description}
    </p>
    <p class="text-xs text-gray-300">{Astro.props.years}</p>
  </div>
</a>
